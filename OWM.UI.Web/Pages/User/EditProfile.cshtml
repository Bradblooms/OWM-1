@page
@model OWM.UI.Web.Pages.User.EditProfileModel
@{
    Layout = "Shared/UserLayout";
}
<link href="~/css/jquery.Jcrop.min.css" rel="stylesheet" />
<script src="~/js/jquery.Jcrop.min.js"></script>
<link href="~/css/EditProfile.css" rel="stylesheet" />
<div>
    <h2>Edit Profile</h2>
    <hr>
    <div class="row mt-2">
        <div class="col-md-8" id="inputarea">
            @*alertArea*@
            <div class="row">
                <div class="col-sm-6">
                    <span>First Name</span>
                    <input required class="form-control" />
                </div>
                <div class="col-sm-6">
                    <span>Last Name</span>
                    <input required class="form-control" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <span>Email address</span>
                    <input required class="form-control" type="email" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <span>Contact number</span>
                    <input required class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-6 position-relative">
                    <span>City</span>
                    <input required class="form-control" type="text" autocomplete="off" />
                    <span class="fa fa-times position-absolute" title="clear field"></span>
                    <ul class="position-absolute" name="cityfilter"></ul>
                    <input type="hidden" />
                </div>
                <div class="col-sm-6">
                    <span>Country</span>
                    <input required class="form-control" type="text" readonly />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-6">
                    <span>Gender</span>
                    <select required class="chosen-select" data-placeholder="">
                        <option value=""></option>
                        <option value="1">Male</option>
                        <option value="0">Female</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <span>EthnicityS</span>
                    <select required data-placeholder="" class="chosen-select">
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <span>Password</span>
                    <input required class="form-control"/>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <span>Confirm password</span>
                    <input required class="form-control"/>
                </div>
            </div>
            <button class="btn btn-success mt-3" id="savechanges">Save Changes</button>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <img src="http://square-vn.com/app/dscms/assets/images/person-4.jpg?v=1495618120" class="user-image w-50" alt="avatar">
                <button class="btn-sm btn-success mt-3" data-toggle="modal" data-target="#exampleModal">Change profile picture</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/uploads.js"></script>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Change Profile Picture
            </div>
            <div class="modal-body text-center">
                <div class="list-group-item mb-2">
                    <form>
                        <input type="file" onchange="DetectFile($(this),'controls')" />
                    </form>
                </div>
                <div id="controls" style="display: none;">
                    <div class="w-100">
                        <div id="views" class="img-thumbnail d-inline-block">
                        </div>
                    </div>
                    <div style="padding: 5px;">
                        <button id="cropbutton" class="btn-sm btn-primary" type="button">cut</button>
                        <button id="scalebutton" class="btn-sm btn-primary" type="button">scale</button>
                        <button id="rotatebutton" class="btn-sm btn-primary" type="button">rotate</button>
                        <button id="hflipbutton" class="btn-sm btn-primary" type="button">flip horizontal</button>
                        <button id="vflipbutton" class="btn-sm btn-primary" type="button">flip vertical</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" >
                    <img src="~/img/loading.gif" class="loading-sm" style="display: none;"/> Upload image
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    $('.chosen-select').chosen({ width: "100%" });
    $('#savechanges').on('click',
        function() {
            if (Checkinputs('inputarea')) {
                ElementRedalert('savechanges' , 'right center' ,'please fill fields');
            }
        });
</script>