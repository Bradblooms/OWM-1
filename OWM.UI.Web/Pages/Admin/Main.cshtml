@page
@model OWM.UI.Web.Pages.Admin.MainModel
@{
    Layout = "Shared/_AdminLayout";
}

<div class="w-75">
    <div class="row">
        <div class="col-4 p-1">
            <div class="card grey lighten-2">
                <div class="card-body">
                    <i class="fas fa-globe-americas fa-3x pb-4"></i>
                    <div class="d-flex justify-content-between">
                        <h4 class="mb-0 h5 mt-2">Countries</h4>
                        <h2 class="mb-0 hour">5</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 p-1">
            <div class="card orange lighten-3">
                <div class="card-body">
                    <i class="fas fa-users fa-3x pb-4"></i>
                    <div class="d-flex justify-content-between">
                        <h4 class="mb-0 h5 mt-2">Participants</h4>
                        <h2 class="mb-0 hour">5</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 p-1">
            <div class="card blue lighten-3">
                <div class="card-body">
                    <i class="fas fa-map-marked-alt fa-3x pb-4"></i>
                    <div class="d-flex justify-content-between">
                        <h4 class="mb-0 h5 mt-2">Miles pledged</h4>
                        <h2 class="mb-0 hour">5</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>