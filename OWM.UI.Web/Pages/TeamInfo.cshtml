@page "/Teams/Details/{teamid?}"
@model OWM.UI.Web.Pages.TeamInfoModel
@{
    Layout = "Shared/_Layout";
}

<link href="~/css/TeamInfo.css" rel="stylesheet" />
<div class="container">
    <div class="card bg-white">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-9" id="namearea">
                    <h3 class="mb-0">@Model.TeamInformation.TeamName</h3>
                    <div class="mb-2 mt-2 x-small text-muted border-bottom">Created on: @Model.TeamInformation.DateCreated.ToString(Application.Services.Utils.Constants.DateFormat_LongMonth)</div>
                    <h6 class="mb-0 text-muted">
                        @Model.TeamInformation.Description
                    </h6>
                </div>
                <div class="col-sm-3">
                    @if (Model.CanJoinTeam.FinalResult == false && Model.CanJoinTeam.IsAlreadyMember == false)
                    {
                        if (Model.CanJoinTeam.IsLoggedIn)
                        {
                            <span>You cannot join this team, because:</span>
                            if (Model.CanJoinTeam.TeamIsClosed)
                            {
                                <div class="alert alert-warning mb-0">
                                    <span>Team is closed by creator.</span>
                                </div>
                            }

                            if (Model.CanJoinTeam.OccupationFilter && Model.CanJoinTeam.OccupationsMatch == false)
                            {
                                <div class="alert alert-warning mb-0">
                                    <span>Your occupation does not match with team's selected occupation.</span>
                                </div>
                            }

                            if (Model.CanJoinTeam.AgeRangeMatch)
                            {
                                <div class="alert alert-warning mb-0">
                                    <span>Your age range does not match with this team members.</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="small">
                                To join this team, you need to
                                <a class="text-primary" asp-page="/Login" asp-route-returnUrl="/Teams/Details/@Model.TeamId">Login</a>
                                or <a class="text-primary" asp-page="/Register" asp-route-returnUrl="/Teams/Details/@Model.TeamId">Register</a>.
                            </div>
                        }
                    }

                    @if (Model.CanJoinTeam.FinalResult && Model.CanJoinTeam.IsAlreadyMember == false)
                    {
                        <form method="post">
                            <div asp-validation-summary="All" id="ValidationSummary"></div>

                            <div class="alert alert-info mb-0">
                                <span>Join team</span>
                            </div>
                            <span>join this team by pledging some miles:</span>
                            <input type="number" step="0.1" class="form-control" asp-for="@Model.Input.MilesPledged" />
                            <button class="btn btn-success" type="submit" id="pledged">
                                <span class="fa fa-plus"></span> Pledge miles
                            </button>
                        </form>
                    }

                    @if (Model.CanJoinTeam.IsAlreadyMember)
                    {
                        <div class="alert alert-info mb-0">
                            <div class="x-small">Spread the word, invite your friends to join this team.</div>
                            <a asp-route-teamid="@Model.TeamId" asp-page="/User/InviteMember" class="btn btn-sm btn-success mt-2">
                                <span class="fa fa-envelope"></span> Invite a friend
                            </a>
                        </div>
                    }
                </div>
            </div>
            <hr />
            <div class="row mt-4 mb-4">
                <div class="col-sm-4 col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="fa fa-map-marker-alt display-4 text-info"></div>
                                <div class="ml-3">
                                    <div class="text-muted small">Miles Pledged</div>
                                    <div>@Model.TeamInformation.TotalMilesPledged</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="fas fa-map-marked-alt display-4 text-primary"></div>
                                <div class="ml-3">
                                    <div class="text-muted x-small">Miles Completed</div>
                                    <div>@Model.TeamInformation.TotalMilesCompleted</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-xl-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="fa fa-users display-4 text-warning"></div>
                                <div class="ml-3">
                                    <div class="text-muted small">Members</div>
                                    <div>@Model.TeamInformation.TeamMembers.Count</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="list-group">
                        <div class="list-group-item active text-center">
                            Members
                        </div>
                        <div style="overflow-y: auto; overflow-x: hidden; max-height: 250px;" id="search">
                            @foreach (var member in Model.TeamInformation.TeamMembers)
                            {
                                <div class="list-group-item text-left list-group-item-action">
                                    <div class="media">
                                        <img class="mr-3 rounded-circle" src="@member.ProfilePicture" alt="@member.FirstName @member.SurName">
                                        <div class="media-body">
                                            <div class="row">
                                                <div class="col-6">
                                                    <a asp-route-profileid="@member.ProfileId" asp-page="/UserProfile">
                                                        <h5 class="mt-0 mb-0 font-weight-bold">@member.FirstName @member.SurName</h5>
                                                    </a>
                                                    <p class="small mt-2 mb-0">@member.City, @member.Country</p>
                                                </div>
                                                <div class="col-6">
                                                    <p>Miles Pledged: <span class="badge badge-primary">@member.MyPledgedMiles</span></p>
                                                    <p class="mb-0">Miles Completed: <span class="badge badge-success">@member.MyCompletedMiles</span></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 